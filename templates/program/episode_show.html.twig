{% extends 'base.html.twig' %}

{% block title %}Série
	{{ program.title }}
{% endblock %}

{% block body %}
	<div class="media">
		<h1 class="mt-0">{{ program.title }}</h1>
		<h2>Saison
			{{ season.number }}</h2>
		<h3>Episode :
			{{ episode.number }}
			- 
									Titre :
			{{ episode.title}}
		</h3>
		<p>
			Résumé :
			{{ episode.synopsis}}</p>


	</div>

	<p>
		<a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id } ) }}">
			Retour à la liste des saisons de la série
		</a>
	</p>
{% endblock %}
