{% extends 'base.html.twig' %}

{% block title %}Série
	{{ program.title }}
{% endblock %}

{% block body %}
	<div class="media">
		<h1 class="mt-0">{{ program.title }}</h1>
		<p>Saison
			{{ season.number }}</p>
		<p>Synopsis :
			{{ season.description }}</p>
		<h2>
			Liste des épisodes
		</h2>

		<ul>
			{% for episode in episodes %}
				<li>Épisode
					{{episode.number}}
					:
					<a href="{{ path("program_episode_show", { programId: program.id, seasonId: season.id, episodeId: episode.id } ) }}">
						{{episode.title}}
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>

	<p>
		<a href="{{ path("program_show", { slug: program.slug }) }}">
			Retour à la liste des saisons de la série
		</a>
	</p>
{% endblock %}
