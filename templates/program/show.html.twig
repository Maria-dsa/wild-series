{% extends 'base.html.twig' %}

{% block title %}Série
	{{ program.title }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>
				Saisons
			</p>
			<ul>
				{% for season in program.seasons %}
					<li>N°
						{{season.number}}
						-
						<a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id } ) }}">
							Détail de la saison
						</a>
					</li>
				{% endfor %}
			</ul>
			<p>Durée totale de la série : {{ programDuration }}</p>

			<p>Catégorie :
				{{ program.category.name }}</p>

			<strong>Acteurs :</strong>
			<ul>
				{% for actor in program.actors %}
					<li>{{ actor.name }} : <a href="{{ path("actor_show", { id: actor.id }) }}"> voir la fiche de l'acteur </a></li>
				{% else %}
					<li>Aucun acteur pour cette série</li>
				{% endfor %}
			</ul>

		</div>

		<a href="{{ path('program_index') }}">
			Retour à la liste des programmes
		</a>
	</div>


{% endblock %}
