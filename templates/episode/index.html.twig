{% extends 'base.html.twig' %}

{% block title %}Episode index
{% endblock %}

{% block body %}
	<h1>Episode index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Program Name</th>
				<th>Season Number</th>
				<th>Title</th>
				<th>Number</th>
				<th>Synopsis</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for episode in episodes|sort((a, b) => a.season.program.title <=> b.season.program.title) %}
				<tr>
					<td>{{ episode.id }}</td>
					<td>{{episode.season.program.title}}</td>
					<td>{{ episode.season.number }}</td>
					<td>{{ episode.title }}</td>
					<td>{{ episode.number }}</td>
					<td>{{ episode.synopsis }}</td>
					<td>
						<a href="{{ path('app_episode_show', {'slug': episode.slug}) }}">show</a>
						<a href="{{ path('app_episode_edit', {'slug': episode.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_episode_new') }}">Create new</a>
{% endblock %}
